<link rel="stylesheet" href="/css/user_profile.css">

<h2 style="padding-top: 4%; padding-left: 20px; position: fixed;">
    Profile
</h2>


<% if(user.id == profile_user.id) { %>
    <!-- if user matches then show the update form -->
    <div id="user-info-update">
        <form action="/users/update/<%= profile_user.id %>" method="post">
            <input type="text" name="name" placeholder="Your Name" value="<%= profile_user.name %>" required class="input"> <br>
            <input type="email" name="email" placeholder="Your Email" value="<%= profile_user.email %>" required class="input"> <br>
            <input type="submit" value="Update" class="btn">
        </form>
    </div>

<% } else { %> 
    <!-- else show the profile info only -->
    <div id="user-info">
        <p> <%= profile_user.name %> </p>
        <p> <%= profile_user.email %> </p>
    </div>
<% } %>