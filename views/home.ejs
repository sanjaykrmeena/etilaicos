    <link rel="stylesheet" href="/css/fee-posts.css">
</head>
<body>

    <% if (locals.user){ %>
        <h1 style="padding-left: 30px;">
            <%= title %>
        </h1>

        <section id="feed-posts" class="card">
            <h3 style="padding-top: 10px;">Posts</h3>
            <form action="" id="new-post-form" method="post">
                <textarea name="content" cols="50" rows="4" placeholder="Type Here..."></textarea> <br> <br>
                <input type="submit" value="Post">
            </form>
        </section>


        <% }else{ %>
            <img src="/images/bck2.png" style="
                width: 100%;
                align-items : center;
                height: 100%; background-position: center center; background-size: cover;" 
                alt="img">
        <% } %>
    
</body>
</html>        